{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ESNext"],
    "types": ["@types/chrome", "@types/react", "@types/react-dom"],
    "noImplicitAny": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "build"
  },
  "exclude": ["./node_modules", "./build"]
}